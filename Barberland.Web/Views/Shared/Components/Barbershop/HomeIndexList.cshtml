@model List<Barbershop>

<div class="barbershop-list">
    <div class="row card-group justify-content-center" style="flex-direction:inherit;">
        @foreach (var barbershop in Model)
        {
            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-6">
                <div class="card ratio ratio-1x1">
                    <div class="card-body card-barbershop align-items-center">
                        <div class="card-img-top">
                            <img style="width:100%; height:auto;" class="img-fluid" src="@string.Format("{0}", barbershop.LogoImgUrl)" alt="@string.Format("{0}", barbershop.Name)">
                        </div>
                        <div class="barbershop-img-overlay text-center">
                            <div class="text">
                                <h4 class="card-title">@barbershop.Name</h4>
                                <small class="text-muted">@string.Format("{0}, {1}", barbershop.District, barbershop.City)</small>
                            </div>
                        </div>
                        <a href="@string.Format("/{0}", barbershop.Permalink)" class="stretched-link">
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>